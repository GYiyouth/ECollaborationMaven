<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--定义数据源bean-->
    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
          destroy-method="close"
          p:driverClass="com.mysql.jdbc.Driver"
          p:jdbcUrl="jdbc:mysql://localhost:3306/ECollaborationWeb?useSSL=false"
          p:user="root"
          p:password="686995"
          p:maxPoolSize="40"
          p:minPoolSize="2"
          p:initialPoolSize="2"
          p:maxIdleTime="30"/>
    <bean name = "localSessionFactoryBean" id="sessionFactory"
          class="org.springframework.orm.hibernate5.LocalSessionFactoryBean"
          p:dataSource-ref="dataSource">
        <!--annotatedClass用来列出所有的持久化类-->
        <property name="annotatedClasses">
            <list>
                <!--<value>pojo.vo.domain.UserVO</value>-->
                <!--<value>pojo.vo.domain.AchievementVO</value>-->
                <!--<value>pojo.vo.domain.NormalUserVO</value>-->
                <!--<value>pojo.vo.domain.TransactionVO</value>-->
                <!--<value>pojo.vo.domain.AdvancedUserVO</value>-->
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <!--执行数据库连接方言-->
                <prop key="hibernate.dialect">
                    org.hibernate.dialect.MySQL5InnoDBDialect
                </prop>
                <!--是否根据hibernate映射创建数据表-->
                <prop key="hibernate.hbm2ddl.auto">update</prop>
                <prop key="hibernate.show_sql">true</prop>
            </props>
        </property>
    </bean>

        <!--action-->
    <bean id="logInAction" class="action.com.LogInAction"/>

</beans>